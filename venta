    void buscar(){
        
            try {
                
                conet = (Connection) con2.getConeccion();
                st = conet.prepareStatement("select* FROM inventario where ID = ?");
                st.setString(1,txtid.getText().trim());
                rs = st.executeQuery();               
                if(rs.next()){
                    txtPrecio.setText(rs.getString("Precio"));
                    txtNom.setText(rs.getString("Nombre"));
                    canticanti.setText(rs.getString("Cantidad"));
                }
                
                
                 } catch (Exception e) {
                JOptionPane.showMessageDialog(null,"Producto no encotrado");
           
            }
       
    }
    
    void vender(){
        int canInv = Integer.parseInt(canticanti.getText());
        int canVen = Integer.parseInt(txtCantidad.getText());
        String folio =txtFolio.getText();
        String nom = txtNom.getText();
        float pre = Float.parseFloat(txtPrecio.getText());
        int ide = Integer.parseInt(txtid.getText());
  
        int nuCan = canInv-canVen;
        float tot = pre*canVen;
        String to = Float.toString(tot);
        txtTotal.setText(to);

        
        JOptionPane.showMessageDialog(null,"Confirmar venta de "+canVen+" "+nom+"s"+ "\n por "+tot);
        
        try {
            String sql = "insert into ventas(Folio, Producto, Cantidad, Monto) values ('"+folio+"','"+nom+"','"+canVen+"','"+tot+"')";
            conet = (Connection) con2.getConeccion();
            Statement sto = (Statement) conet.createStatement();
            st.executeUpdate(sql);
            JOptionPane.showMessageDialog(null,"Venta realizada");
            
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null,"Algo salio mal con la venta");       
        }
         
        //Aqui se restan las cantidades al inventario
        try {
            String sql = "Update inventario set Cantidad='"+nuCan+"' where Id="+ide;
            conet = (Connection) con2.getConeccion();
            Statement sto = (Statement) conet.createStatement();
            st.executeUpdate(sql);
            
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null,"Algo salio mal con la venta");       
        }
        
        
        
        
    }
    
